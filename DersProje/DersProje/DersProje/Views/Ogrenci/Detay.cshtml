@model DersProje.Models.Entity.StudentModel
<h5 class="display-4">Assign Lesson</h5>
<hr />
<div class="row">
    <div class="col-md-4">
        <div class="form-group">
            <label class="col-form-label text-danger">First Name: </label>
            <label class="col-form-label">@Model.FirstName</label>
        </div>
        <div class="form-group">
            <label class="col-form-label text-danger">Last Name: </label>
            <label class="col-form-label">@Model.LastName</label>
        </div>
    </div>
    <div class="col-md-8">
        <form asp-action="Edit">
            @for (int i = 0; i < Model.SelectedCourses.Count; i++)
            {
                <input type="hidden" name="SelectedCourses[@i].CourseId" value="@Model.SelectedCourses[i].DersId" />
                <input type="hidden" name="SelectedCourses[@i].Name" value="@Model.SelectedCourses[i].DersAdi" />
            }
            @foreach (var item in (List<DersProje.Models.Entity.Ders>)ViewBag.Courses)
            {
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" value="@item.DersId" name="courseIds" id="course_@item.DersId" @(Model.SelectedCourses.Any(x => x.DersId == item.DersId) ? "checked" : "") />
                    <label class="form-check-label" for="course_@item.DersId">@item.DersAdi</label>
                </div>
            }
            <input type="submit" asp-route-id="@Model.StudentId" asp-action="Edit" value="Edit"  />
        </form>
    </div>
</div>